{
    "name": "entertainment-tadka/telegram-bot",
    "description": "Entertainment Tadka Telegram Movie Bot",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-zip": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "ext-curl": "*",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "chmod 666 movies.csv users.json bot_stats.json movie_requests.json bot_activity.log || true",
            "chmod 777 backups || true"
        ],
        "post-update-cmd": [
            "chmod 666 movies.csv users.json bot_stats.json movie_requests.json bot_activity.log || true",
            "chmod 777 backups || true"
        ]
    },
    "config": {
        "platform-check": false
    }
}
