// ==============================
// NEW: GROUP MESSAGE FILTER
// ==============================

function handle_group_message($chat_id, $user_id, $message_id, $text, $name) {
    if (!is_request_group($chat_id)) {
        return false;  // Only apply to request group
    }
    
    $data = load_rules();
    
    if (!isset($data[$user_id])) {
        $data[$user_id] = [
            'warnings' => 0,
            'requests' => 0
        ];
    }
    
    // Check if it's a valid movie name
    if (!is_movie_name($text)) {
        // Invalid message - delete it
        deleteMessage($chat_id, $message_id);
        $data[$user_id]['warnings']++;
        
        // FIRST STRIKE
        if ($data[$user_id]['warnings'] == 1) {
            restrictChatMember($chat_id, $user_id, time() + FIRST_MUTE);
            sendMessage($chat_id, "‚ö†Ô∏è $name muted for 10 minutes");
            bot_log("User $user_id muted for 10 minutes in request group");
        }
        
        // SECOND STRIKE
        elseif ($data[$user_id]['warnings'] == 2) {
            restrictChatMember($chat_id, $user_id, time() + SECOND_MUTE);
            sendMessage($chat_id, "üö´ $name muted for 24 hours");
            bot_log("User $user_id muted for 24 hours in request group");
        }
        
        // THIRD STRIKE
        elseif ($data[$user_id]['warnings'] >= 3) {
            banChatMember($chat_id, $user_id);
            sendMessage($chat_id, "‚õî $name permanently banned");
            bot_log("User $user_id banned from request group");
        }
        
        save_rules($data);
        return false;
    }
    
    // Valid movie request
    $data[$user_id]['requests']++;
    save_rules($data);
    
    // Track message for auto-delete
    if (AUTO_DELETE_MESSAGES) {
        track_message_for_deletion($chat_id, $message_id, 1800);  // 30 minutes for request messages
    }
    
    bot_log("Valid movie request by $user_id in request group: $text");
    return true;
}

// ==============================
// NEW: WELCOME MESSAGE FOR REQUEST GROUP
// ==============================

function send_welcome_message($chat_id) {
    if (!is_request_group($chat_id)) {
        return;
    }
    
    // üìå RULES (PIN)
    $rules = "üìå GROUP RULES ‚Äì Entertainment Tadka\n\n".
             "‚úî Only Movie / Series Name\n".
             "‚úî Hindi & English Allowed\n".
             "‚ùå No Hi / Hello\n".
             "‚ùå No Questions / Spam / Ads\n\n".
             "ü§ñ Bot replies automatically\n".
             "‚ö†Ô∏è Rule break = Mute / Ban";
    
    // Check if already pinned
    $r = sendMessage($chat_id, $rules);
    pinChatMessage($chat_id, $r['result']['message_id']);
    
    // üé¨ WELCOME
    $welcome = "üé¨ Welcome to Entertainment Tadka üëã\n\n".
               "Sirf movie ya series ka naam bheje üé•\n".
               "Hindi & English supported\n\n".
               "‚ùå Hi / Hello & Spam allowed nahi\n".
               "ü§ñ Bot automatic reply karega";
    
    $w = sendMessage($chat_id, $welcome);
    
    // Track for auto-delete after 30 minutes
    track_message_for_deletion($chat_id, $w['result']['message_id'], WELCOME_DELETE);
    bot_log("Welcome message sent to request group $chat_id");
}

// ==============================
// MOVIE APPEND FUNCTION WITH AUTO-NOTIFICATION (UPDATED FOR SQLITE)
// ==============================
function append_movie($movie_name, $message_id_raw, $date = null, $video_path = '', $quality = 'Unknown', $size = 'Unknown', $language = 'Hindi', $channel_type = 'main') {
    global $movie_messages, $movie_cache, $waiting_users;
    
    if (empty(trim($movie_name))) return;
    
    if ($date === null) $date = date('d-m-Y');
    
    $channel_id = '';
    $channel_username = '';
    
    switch ($channel_type) {
        case 'main':
            $channel_id = MAIN_CHANNEL_ID;
            $channel_username = MAIN_CHANNEL;
            break;
        case 'theater':
            $channel_id = THEATER_CHANNEL_ID;
            $channel_username = THEATER_CHANNEL;
            break;
        case 'backup':
        case 'backup2':
            $channel_id = BACKUP_CHANNEL_ID;
            $channel_username = BACKUP_CHANNEL_USERNAME;
            break;
        case 'private':
            $channel_id = '-1003251791991';
            $channel_username = '@private_channel';
            break;
        case 'any':
            $channel_id = '-1003614546520';
            $channel_username = '@any_channel';
            break;
        default:
            $channel_id = MAIN_CHANNEL_ID;
            $channel_username = MAIN_CHANNEL;
    }
    
    // Add to CSV
    $entry = [$movie_name, $message_id_raw, $date, $video_path, $quality, $size, $language, $channel_type, $channel_id, $channel_username];
    
    $handle = fopen(CSV_FILE, "a");
    fputcsv($handle, $entry);
    fclose($handle);
    
    // NEW: Also add to SQLite
    $movie_data = [
        'movie_name' => $movie_name,
        'message_id_raw' => $message_id_raw,
        'message_id' => is_numeric($message_id_raw) ? intval($message_id_raw) : null,
        'date' => $date,
        'video_path' => $video_path,
        'quality' => $quality,
        'size' => $size,
        'language' => $language,
        'channel_type' => $channel_type,
        'channel_id' => $channel_id,
        'channel_username' => $channel_username,
        'source_channel' => $channel_id
    ];
    
    add_movie_to_sqlite($movie_data);

    $movie = strtolower(trim($movie_name));
    $item = [
        'movie_name' => $movie_name,
        'message_id_raw' => $message_id_raw,
        'date' => $date,
        'video_path' => $video_path,
        'quality' => $quality,
        'size' => $size,
        'language' => $language,
        'channel_type' => $channel_type,
        'channel_id' => $channel_id,
        'channel_username' => $channel_username,
        'message_id' => is_numeric($message_id_raw) ? intval($message_id_raw) : null,
        'source_channel' => $channel_id
    ];
    
    if (!isset($movie_messages[$movie])) $movie_messages[$movie] = [];
    $movie_messages[$movie][] = $item;
    $movie_cache = [];

    // Auto-notification to request channel
    $movie_lower = strtolower($movie_name);
    if (!empty($waiting_users[$movie_lower])) {
        $notification_msg = "üîî <b>Movie Added!</b>\n\n";
        $notification_msg .= "üé¨ <b>$movie_name</b> has been added to our collection!\n\n";
        $notification_msg .= "üì¢ Join: " . get_channel_username_link($channel_type) . " to download\n";
        $notification_msg .= "üîî " . count($waiting_users[$movie_lower]) . " users were waiting for this movie!\n\n";
        $notification_msg .= "üìÖ Added: " . $date . "\n";
        $notification_msg .= "üìä Quality: " . $quality . "\n";
        $notification_msg .= "üó£Ô∏è Language: " . $language . "\n";
        $notification_msg .= "üé≠ Channel: " . get_channel_display_name($channel_type);
        
        sendMessage(MAIN_CHANNEL_ID, $notification_msg, null, 'HTML');
        bot_log("Auto-notification sent for: $movie_name to " . count($waiting_users[$movie_lower]) . " users");
        
        // Waiting users ko notify karo
        foreach ($waiting_users[$movie_lower] as $user_data) {
            list($user_chat_id, $user_id) = $user_data;
            $channel_link = get_channel_username_link($channel_type);
            sendMessage($user_chat_id, "üéâ <b>Good News!</b>\n\nYour requested movie <b>$movie_name</b> has been added!\n\nJoin channel to download: $channel_link", null, 'HTML');
        }
        unset($waiting_users[$movie_lower]);
    }

    update_stats('total_movies', 1);
    bot_log("Movie appended: $movie_name with ID $message_id_raw to $channel_type channel ($channel_id)");
}

