// ==============================
// NEW: HELPER FUNCTIONS FOR SQLITE
// ==============================

function get_sqlite_count() {
    if (!file_exists(SQLITE_DB)) {
        return 0;
    }
    
    $db = new SQLite3(SQLITE_DB);
    $result = $db->query("SELECT COUNT(*) as count FROM movies");
    $row = $result->fetchArray(SQLITE3_ASSOC);
    $count = $row['count'] ?? 0;
    $db->close();
    
    return $count;
}

// ==============================
// HELPER FUNCTIONS FOR CHANNEL INFO (UPDATED)
// ==============================
function get_active_users_count() {
    $users_data = json_decode(file_get_contents(USERS_FILE), true);
    $active_count = 0;
    $one_week_ago = strtotime('-1 week');
    
    foreach ($users_data['users'] ?? [] as $user) {
        if (strtotime($user['last_active'] ?? '') >= $one_week_ago) {
            $active_count++;
        }
    }
    
    return $active_count;
}

function get_daily_uploads_count() {
    $today = date('d-m-Y');
    $count = 0;
    
    // Check CSV
    $handle = fopen(CSV_FILE, 'r');
    if ($handle !== FALSE) {
        fgetcsv($handle);
        while (($row = fgetcsv($handle)) !== FALSE) {
            if (count($row) >= 3 && $row[2] == $today) {
                $count++;
            }
        }
        fclose($handle);
    }
    
    // Also check SQLite
    if (file_exists(SQLITE_DB)) {
        $db = new SQLite3(SQLITE_DB);
        $today_sql = date('Y-m-d');
        $result = $db->query("SELECT COUNT(*) as count FROM movies WHERE date = '$today' OR date = '$today_sql'");
        $row = $result->fetchArray(SQLITE3_ASSOC);
        $sqlite_count = $row['count'] ?? 0;
        $db->close();
        
        $count = max($count, $sqlite_count);
    }
    
    return $count;
}

function get_csv_count() {
    $count = 0;
    
    $handle = fopen(CSV_FILE, 'r');
    if ($handle !== FALSE) {
        fgetcsv($handle);
        while (($row = fgetcsv($handle)) !== FALSE) {
            if (count($row) >= 3 && !empty(trim($row[0]))) {
                $count++;
            }
        }
        fclose($handle);
    }
    
    return $count;
}

function get_users_count() {
    $users_data = json_decode(file_get_contents(USERS_FILE), true);
    return count($users_data['users'] ?? []);
}

