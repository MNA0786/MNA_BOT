// NEW: Test SQLite
if (isset($_GET['test_sqlite'])) {
    echo "<h3>SQLite Database Test</h3>";
    
    if (!file_exists(SQLITE_DB)) {
        echo "‚ùå SQLite database not found!<br>";
        echo "Initializing database...<br>";
        init_sqlite_database();
    }
    
    $db = new SQLite3(SQLITE_DB);
    
    // Count movies
    $result = $db->query("SELECT COUNT(*) as count FROM movies");
    $row = $result->fetchArray(SQLITE3_ASSOC);
    echo "Total movies in SQLite: " . ($row['count'] ?? 0) . "<br>";
    
    // Show recent movies
    $result = $db->query("SELECT movie_name, message_id, channel_type, date FROM movies ORDER BY id DESC LIMIT 10");
    echo "<h4>Recent Movies:</h4>";
    echo "<table border='1'><tr><th>Movie Name</th><th>Message ID</th><th>Channel</th><th>Date</th></tr>";
    while ($row = $result->fetchArray(SQLITE3_ASSOC)) {
        echo "<tr>";
        echo "<td>" . htmlspecialchars($row['movie_name'] ?? '') . "</td>";
        echo "<td>" . ($row['message_id'] ?? '') . "</td>";
        echo "<td>" . ($row['channel_type'] ?? '') . "</td>";
        echo "<td>" . ($row['date'] ?? '') . "</td>";
        echo "</tr>";
    }
    echo "</table>";
    
    $db->close();
    exit;
}

// Webhook setup
if (php_sapi_name() === 'cli' || isset($_GET['setwebhook'])) {
    $webhook_url = (isset($_SERVER['HTTPS']) && $_SERVER['HTTPS'] === 'on' ? "https" : "http") . "://$_SERVER[HTTP_HOST]$_SERVER[REQUEST_URI]";
    $result = apiRequest('setWebhook', ['url' => $webhook_url]);
    
    echo "<h1>Webhook Setup</h1>";
    echo "<p>Result: " . htmlspecialchars($result) . "</p>";
    echo "<p>Webhook URL: " . htmlspecialchars($webhook_url) . "</p>";
    
    $bot_info = json_decode(apiRequest('getMe'), true);
    if ($bot_info && isset($bot_info['ok']) && $bot_info['ok']) {
        echo "<h2>Bot Info</h2>";
        echo "<p>Name: " . htmlspecialchars($bot_info['result']['first_name']) . "</p>";
        echo "<p>Username: @" . htmlspecialchars($bot_info['result']['username']) . "</p>";
        echo "<p>Version: 3.0.0 (Complete Feature Set)</p>";
        echo "<p>Main Channel: " . MAIN_CHANNEL . " (" . MAIN_CHANNEL_ID . ")</p>";
        echo "<p>Theater Channel: " . THEATER_CHANNEL . " (" . THEATER_CHANNEL_ID . ")</p>";
        echo "<p>Backup Channel: " . BACKUP_CHANNEL_USERNAME . " (" . BACKUP_CHANNEL_ID . ")</p>";
        echo "<p>Request Channel: " . REQUEST_CHANNEL . "</p>";
        echo "<p>Request Group: " . REQUEST_GROUP_ID . "</p>";
        echo "<p>Private Channel: -1003251791991</p>";
        echo "<p>Any Channel: -1003614546520</p>";
    }
    
    echo "<h3>System Status</h3>";
    echo "<p>CSV File: " . (file_exists(CSV_FILE) ? "‚úÖ Exists" : "‚ùå Missing") . "</p>";
    echo "<p>SQLite DB: " . (file_exists(SQLITE_DB) ? "‚úÖ Exists" : "‚ùå Missing") . "</p>";
    echo "<p>Users File: " . (file_exists(USERS_FILE) ? "‚úÖ Exists" : "‚ùå Missing") . "</p>";
    echo "<p>Stats File: " . (file_exists(STATS_FILE) ? "‚úÖ Exists" : "‚ùå Missing") . "</p>";
    echo "<p>Rules File: " . (file_exists(RULE_FILE) ? "‚úÖ Exists" : "‚ùå Missing") . "</p>";
    echo "<p>Backup Directory: " . (file_exists(BACKUP_DIR) ? "‚úÖ Exists" : "‚ùå Missing") . "</p>";
    
    exit;
}

