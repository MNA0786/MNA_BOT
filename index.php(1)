function load_rules() {
    return file_exists(RULE_FILE)
        ? json_decode(file_get_contents(RULE_FILE), true)
        : [];
}

function save_rules($data) {
    file_put_contents(RULE_FILE, json_encode($data, JSON_PRETTY_PRINT));
}

function is_movie_name($text) {
    $text = trim($text);

    if (strlen($text) < 2 || strlen($text) > 60) return false;
    if (preg_match('/[?!.]/', $text)) return false;

    $blocked = ['hi','hello','gm','how','please','link','bot','available'];
    foreach ($blocked as $b) {
        if (stripos($text, $b) !== false) return false;
    }

    return preg_match('/^[a-zA-Z0-9\s\-():]+$/', $text);
}

function is_request_group($chat_id) {
    return $chat_id == REQUEST_GROUP_ID;
}

function get_progress_bar($percentage, $total = 20) {
    if (PROGRESS_BAR_TYPE == 'graphics') {
        $filled = round(($percentage / 100) * $total);
        $empty = $total - $filled;
        
        $bar = '';
        for ($i = 0; $i < $filled; $i++) $bar .= '‚ñà';
        for ($i = 0; $i < $empty; $i++) $bar .= '‚ñë';
        
        return "[$bar] " . round($percentage) . "%";
    } else {
        // Text-based progress bar
        $percentage = round($percentage);
        return "Progress: $percentage% complete";
    }
}

// ==============================
// NEW: SQLITE MANAGEMENT FUNCTIONS
// ==============================

function init_sqlite_database() {
    if (!file_exists(SQLITE_DB)) {
        $db = new SQLite3(SQLITE_DB);
        
        $db->exec("CREATE TABLE IF NOT EXISTS movies (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            movie_name TEXT NOT NULL,
            message_id INTEGER NOT NULL,
            date TEXT,
            video_path TEXT,
            quality TEXT,
            size TEXT,
            language TEXT DEFAULT 'Hindi',
            channel_type TEXT DEFAULT 'main',
            channel_id TEXT,
            channel_username TEXT,
            source_channel TEXT,
            created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
        )");
        
        $db->exec("CREATE INDEX IF NOT EXISTS idx_movie_name ON movies(movie_name)");
        $db->exec("CREATE INDEX IF NOT EXISTS idx_channel_type ON movies(channel_type)");
        $db->exec("CREATE INDEX IF NOT EXISTS idx_date ON movies(date)");
        
        $db->close();
        bot_log("SQLite database initialized");
    }
}

function add_movie_to_sqlite($movie_data) {
    $db = new SQLite3(SQLITE_DB);
    
    $stmt = $db->prepare("INSERT INTO movies 
        (movie_name, message_id, date, video_path, quality, size, language, channel_type, channel_id, channel_username, source_channel) 
        VALUES (:movie_name, :message_id, :date, :video_path, :quality, :size, :language, :channel_type, :channel_id, :channel_username, :source_channel)");
    
    $stmt->bindValue(':movie_name', $movie_data['movie_name'], SQLITE3_TEXT);
    $stmt->bindValue(':message_id', $movie_data['message_id'], SQLITE3_INTEGER);
    $stmt->bindValue(':date', $movie_data['date'], SQLITE3_TEXT);
    $stmt->bindValue(':video_path', $movie_data['video_path'], SQLITE3_TEXT);
    $stmt->bindValue(':quality', $movie_data['quality'], SQLITE3_TEXT);
    $stmt->bindValue(':size', $movie_data['size'], SQLITE3_TEXT);
    $stmt->bindValue(':language', $movie_data['language'], SQLITE3_TEXT);
    $stmt->bindValue(':channel_type', $movie_data['channel_type'], SQLITE3_TEXT);
    $stmt->bindValue(':channel_id', $movie_data['channel_id'], SQLITE3_TEXT);
    $stmt->bindValue(':channel_username', $movie_data['channel_username'], SQLITE3_TEXT);
    $stmt->bindValue(':source_channel', $movie_data['source_channel'], SQLITE3_TEXT);
    
    $result = $stmt->execute();
    $inserted_id = $db->lastInsertRowID();
    
    $stmt->close();
    $db->close();
    
    return $inserted_id;
}

function delete_movie_from_sqlite($movie_name, $message_id = null) {
    $db = new SQLite3(SQLITE_DB);
    
    if ($message_id) {
        $stmt = $db->prepare("DELETE FROM movies WHERE movie_name = :movie_name AND message_id = :message_id");
        $stmt->bindValue(':movie_name', $movie_name, SQLITE3_TEXT);
        $stmt->bindValue(':message_id', $message_id, SQLITE3_INTEGER);
    } else {
        $stmt = $db->prepare("DELETE FROM movies WHERE movie_name = :movie_name");
        $stmt->bindValue(':movie_name', $movie_name, SQLITE3_TEXT);
    }
    
    $result = $stmt->execute();
    $deleted = $db->changes();
    
    $stmt->close();
    $db->close();
    
    return $deleted;
}

function get_movies_from_sqlite($limit = 1000, $offset = 0) {
    $db = new SQLite3(SQLITE_DB);
    
    $results = $db->query("SELECT * FROM movies ORDER BY id DESC LIMIT $limit OFFSET $offset");
    $movies = [];
    
    while ($row = $results->fetchArray(SQLITE3_ASSOC)) {
        $movies[] = $row;
    }
    
    $db->close();
    return $movies;
}

function search_movies_in_sqlite($query) {
    $db = new SQLite3(SQLITE_DB);
    
    $stmt = $db->prepare("SELECT * FROM movies WHERE movie_name LIKE :query OR movie_name LIKE :query2 ORDER BY id DESC LIMIT 50");
    $stmt->bindValue(':query', '%' . $query . '%', SQLITE3_TEXT);
    $stmt->bindValue(':query2', $query . '%', SQLITE3_TEXT);
    
    $results = $stmt->execute();
    $movies = [];
    
    while ($row = $results->fetchArray(SQLITE3_ASSOC)) {
        $movies[] = $row;
    }
    
    $stmt->close();
    $db->close();
    
    return $movies;
}

// ==============================
// NEW: AUTO SCANNER FUNCTIONS
// ==============================

function run_auto_scanner() {
    bot_log("Starting auto-scanner...");
    
    // Check if we should run scanner
    $last_scan = file_exists('last_scan.txt') ? file_get_contents('last_scan.txt') : 0;
    $current_time = time();
    
    if (($current_time - $last_scan) < SCAN_INTERVAL && file_exists(INITIAL_SCAN_DONE)) {
        bot_log("Scanner skipped - recently ran");
        return;
    }
    
    // Load all CSV movies
    $csv_movies = load_and_clean_csv();
    $added_count = 0;
    
    foreach ($csv_movies as $movie) {
        // Check if movie already exists in SQLite
        $existing = search_movies_in_sqlite($movie['movie_name']);
        
        $found = false;
        foreach ($existing as $existing_movie) {
            if ($existing_movie['message_id'] == $movie['message_id'] && 
                $existing_movie['channel_id'] == $movie['channel_id']) {
                $found = true;
                break;
            }
        }
        
        if (!$found) {
            // Add to SQLite
            $movie_data = [
                'movie_name' => $movie['movie_name'],
                'message_id' => $movie['message_id'],
                'date' => $movie['date'],
                'video_path' => $movie['video_path'],
                'quality' => $movie['quality'],
                'size' => $movie['size'],
                'language' => $movie['language'],
                'channel_type' => $movie['channel_type'],
                'channel_id' => $movie['channel_id'],
                'channel_username' => $movie['channel_username'],
                'source_channel' => $movie['source_channel']
            ];
            
            add_movie_to_sqlite($movie_data);
            $added_count++;
            
            if ($added_count % 100 == 0) {
                bot_log("Scanner: Added $added_count movies so far...");
            }
        }
    }
    
    file_put_contents('last_scan.txt', $current_time);
    
    if (!file_exists(INITIAL_SCAN_DONE) && $added_count > 0) {
        file_put_contents(INITIAL_SCAN_DONE, '1');
    }
    
    bot_log("Auto-scanner completed. Added $added_count new movies to SQLite.");
    
    // Send report to admin
    $report = "üîÑ Auto-Scanner Report\n\n";
    $report .= "üìÖ " . date('Y-m-d H:i:s') . "\n";
    $report .= "üìä New movies added: $added_count\n";
    $report .= "üíæ Database: " . SQLITE_DB . "\n";
    $report .= "‚è∞ Next scan: " . date('Y-m-d H:i:s', $current_time + SCAN_INTERVAL);
    
    sendMessage(ADMIN_ID, $report);
}

// ==============================
// NEW: DELETE MOVIE FROM DATABASE FUNCTION
// ==============================

function delete_movie_from_database($chat_id, $user_id, $movie_identifier) {
    // Permission check - only admin can delete movies
    if ($chat_id != ADMIN_ID && $user_id != ADMIN_ID) {
        sendMessage($chat_id, "‚ùå Access denied. Admin only command.");
        return;
    }
    
    // Parse movie identifier (could be name or name+id)
    $parts = explode(',', $movie_identifier, 2);
    $movie_name = trim($parts[0]);
    $message_id = isset($parts[1]) ? trim($parts[1]) : null;
    
    if (empty($movie_name)) {
        sendMessage($chat_id, "‚ùå Usage: <code>/deletemovie movie_name[,message_id]</code>\nExample: <code>/deletemovie Test Movie</code>\nExample: <code>/deletemovie Test Movie,12345</code>", null, 'HTML');
        return;
    }
    
    $deleted_csv = 0;
    $deleted_sqlite = 0;
    
    // 1. Delete from CSV
    if (file_exists(CSV_FILE)) {
        $csv_data = [];
        $handle = fopen(CSV_FILE, 'r');
        $header = fgetcsv($handle);
        
        while (($row = fgetcsv($handle)) !== FALSE) {
            if (count($row) >= 3) {
                $current_movie = trim($row[0]);
                $current_id = isset($row[1]) ? trim($row[1]) : '';
                
                if ($message_id) {
                    // Delete specific message ID
                    if (!($current_movie == $movie_name && $current_id == $message_id)) {
                        $csv_data[] = $row;
                    } else {
                        $deleted_csv++;
                    }
                } else {
                    // Delete all entries with this movie name
                    if ($current_movie != $movie_name) {
                        $csv_data[] = $row;
                    } else {
                        $deleted_csv++;
                    }
                }
            }
        }
        fclose($handle);
        
        // Rewrite CSV without deleted entries
        $handle = fopen(CSV_FILE, 'w');
        fputcsv($handle, $header);
        foreach ($csv_data as $row) {
            fputcsv($handle, $row);
        }
        fclose($handle);
    }
    
    // 2. Delete from SQLite
    $deleted_sqlite = delete_movie_from_sqlite($movie_name, $message_id);
    
    // 3. Clear cache
    global $movie_messages, $movie_cache;
    $movie_key = strtolower($movie_name);
    unset($movie_messages[$movie_key]);
    $movie_cache = [];
    
    // 4. Update stats
    $stats = get_stats();
    $total_deleted = $deleted_csv + $deleted_sqlite;
    $stats['total_movies'] = max(0, ($stats['total_movies'] ?? 0) - $total_deleted);
    file_put_contents(STATS_FILE, json_encode($stats, JSON_PRETTY_PRINT));
    
    // Send confirmation
    $message = "‚úÖ <b>Movie Deletion Complete</b>\n\n";
    $message .= "üé¨ Movie: <code>" . htmlspecialchars($movie_name) . "</code>\n";
    if ($message_id) {
        $message .= "üÜî Message ID: <code>$message_id</code>\n";
    }
    $message .= "\nüìä <b>Results:</b>\n";
    $message .= "‚Ä¢ CSV Deletions: $deleted_csv\n";
    $message .= "‚Ä¢ SQLite Deletions: $deleted_sqlite\n";
    $message .= "‚Ä¢ Total Deleted: $total_deleted\n\n";
    $message .= "üîÑ Caches cleared automatically\n";
    $message .= "üìà Stats updated: " . ($stats['total_movies'] ?? 0) . " movies remaining";
    
    sendMessage($chat_id, $message, null, 'HTML');
    bot_log("Movie deleted by $user_id: $movie_name (CSV: $deleted_csv, SQLite: $deleted_sqlite)");
}

// ==============================
// NEW: NO LIMITS REQUEST SYSTEM
// ==============================

function can_user_request_no_limit($user_id) {
    if (NO_LIMIT_MODE) {
        return true;  // Global no limit mode
    }
    
    if (in_array($user_id, NO_LIMIT_USERS)) {
        return true;  // Specific users with no limits
    }
    
    // Check if user is admin
    if ($user_id == ADMIN_ID) {
        return true;
    }
    
    // Check user level based on points
    $users_data = json_decode(file_get_contents(USERS_FILE), true);
    if (isset($users_data['users'][$user_id])) {
        $points = $users_data['users'][$user_id]['points'] ?? 0;
        if ($points >= 100) {  // Users with 100+ points get no limits
            return true;
        }
    }
    
    return false;  // Use normal limits
}

function add_movie_request_no_limit($user_id, $movie_name, $language = 'hindi') {
    if (can_user_request_no_limit($user_id)) {
        // No limit for this user
        return add_movie_request_unlimited($user_id, $movie_name, $language);
    } else {
        // Use normal limits
        return add_movie_request_limited($user_id, $movie_name, $language);
    }
}

function add_movie_request_unlimited($user_id, $movie_name, $language = 'hindi') {
    $requests_data = json_decode(file_get_contents(REQUEST_FILE), true);
    
    $request_id = uniqid();
    $requests_data['requests'][] = [
        'id' => $request_id,
        'user_id' => $user_id,
        'movie_name' => $movie_name,
        'language' => $language,
        'date' => date('Y-m-d'),
        'time' => date('H:i:s'),
        'status' => 'pending',
        'no_limit' => true
    ];
    
    // User request count update karo
    if (!isset($requests_data['user_request_count'][$user_id])) {
        $requests_data['user_request_count'][$user_id] = 0;
    }
    $requests_data['user_request_count'][$user_id]++;
    
    file_put_contents(REQUEST_FILE, json_encode($requests_data, JSON_PRETTY_PRINT));
    
    // Admin ko notify karo
    $admin_msg = "üéØ New Movie Request (NO LIMIT)\n\n";
    $admin_msg .= "üé¨ Movie: $movie_name\n";
    $admin_msg .= "üó£Ô∏è Language: $language\n";
    $admin_msg .= "üë§ User ID: $user_id\n";
    $admin_msg .= "üìÖ Date: " . date('Y-m-d H:i:s') . "\n";
    $admin_msg .= "üÜî Request ID: $request_id\n";
    $admin_msg .= "üö´ Limit: NO LIMIT APPLIED";
    
    sendMessage(ADMIN_ID, $admin_msg);
    bot_log("Unlimited movie request added: $movie_name by $user_id");
    
    return true;
}

function add_movie_request_limited($user_id, $movie_name, $language = 'hindi') {
    // Normal limit check
    if (!can_user_request($user_id)) {
        return false;
    }
    
    // Same as original function
    return add_movie_request($user_id, $movie_name, $language);
}

// ==============================
// NEW: AI SMART SUGGESTIONS
// ==============================

function get_ai_suggestions($query) {
    if (!AI_SUGGESTIONS_ENABLED) {
        return [];
    }
    
    $query_lower = strtolower(trim($query));
    $suggestions = [];
    
    // Get all movies from cache or SQLite
    $all_movies = get_cached_movies();
    
    foreach ($all_movies as $movie) {
        $movie_name_lower = strtolower($movie['movie_name']);
        
        // Skip if it's the exact movie
        if ($movie_name_lower == $query_lower) {
            continue;
        }
        
        // Calculate similarity score
        similar_text($query_lower, $movie_name_lower, $similarity);
        
        if ($similarity >= SIMILARITY_THRESHOLD) {
            $score = $similarity;
            
            // Additional scoring factors
            if (strpos($movie_name_lower, $query_lower) !== false) {
                $score += 20;  // Partial match bonus
            }
            
            // Quality bonus
            if (isset($movie['quality'])) {
                if (stripos($movie['quality'], '1080') !== false) $score += 5;
                if (stripos($movie['quality'], '720') !== false) $score += 3;
            }
            
            $suggestions[] = [
                'movie' => $movie['movie_name'],
                'score' => $score,
                'quality' => $movie['quality'] ?? 'Unknown',
                'language' => $movie['language'] ?? 'Hindi',
                'channel_type' => $movie['channel_type'] ?? 'main'
            ];
        }
    }
    
    // Sort by score descending
    usort($suggestions, function($a, $b) {
        return $b['score'] - $a['score'];
    });
    
    return array_slice($suggestions, 0, MAX_SUGGESTIONS);
}

function show_ai_suggestions($chat_id, $query, $original_results_count) {
    if ($original_results_count > 0 || !AI_SUGGESTIONS_ENABLED) {
        return;  // Don't show suggestions if we found results
    }
    
    $suggestions = get_ai_suggestions($query);
    
    if (empty($suggestions)) {
        return;
    }
    
    $message = "ü§ñ <b>AI Suggestions:</b> Kya aap ye dhundh rahe ho?\n\n";
    
    foreach ($suggestions as $index => $suggestion) {
        $channel_icon = get_channel_display_name($suggestion['channel_type']);
        $message .= ($index + 1) . ". $channel_icon <b>" . htmlspecialchars($suggestion['movie']) . "</b>\n";
        $message .= "   ‚≠ê " . $suggestion['quality'] . " | üó£Ô∏è " . $suggestion['language'] . "\n\n";
    }
    
    $message .= "üí° <i>Click on any movie name to get it!</i>";
    
    // Create inline keyboard for suggestions
    $keyboard = ['inline_keyboard' => []];
    foreach ($suggestions as $suggestion) {
        $keyboard['inline_keyboard'][] = [[
            'text' => "üé¨ " . htmlspecialchars(substr($suggestion['movie'], 0, 30)),
            'callback_data' => 'ai_suggest_' . base64_encode($suggestion['movie'])
        ]];
    }
    
    sendMessage($chat_id, $message, $keyboard, 'HTML');
}

// ==============================
// NEW: AUTO-DELETE MESSAGE SYSTEM
// ==============================

function track_message_for_deletion($chat_id, $message_id, $delete_after = MOVIE_DELETE_DELAY) {
    global $delete_queue;
    
    $delete_time = time() + $delete_after;
    
    $delete_queue[] = [
        'chat_id' => $chat_id,
        'message_id' => $message_id,
        'delete_time' => $delete_time,
        'progress_started' => false
    ];
    
    // Save to file for persistence
    $tracker = file_exists(DELETE_TRACKER_FILE) ? json_decode(file_get_contents(DELETE_TRACKER_FILE), true) : [];
    $tracker[] = [
        'chat_id' => $chat_id,
        'message_id' => $message_id,
        'delete_time' => $delete_time,
        'progress_started' => false
    ];
    file_put_contents(DELETE_TRACKER_FILE, json_encode($tracker, JSON_PRETTY_PRINT));
}

function start_progress_bar($chat_id, $message_id, $total_seconds) {
    $progress_message = "‚è≥ <b>This message will be deleted in " . $total_seconds . " seconds</b>\n\n";
    $progress_message .= get_progress_bar(0) . "\n\n";
    $progress_message .= "üìå Please forward these files to saved messages and close this message";
    
    $sent_message = sendMessage($chat_id, $progress_message, null, 'HTML');
    
    // Track progress message for updates
    global $delete_queue;
    foreach ($delete_queue as &$item) {
        if ($item['chat_id'] == $chat_id && $item['message_id'] == $message_id) {
            $item['progress_message_id'] = $sent_message['result']['message_id'];
            $item['progress_started'] = time();
            $item['total_seconds'] = $total_seconds;
            break;
        }
    }
    
    // Also save to file
    $tracker = file_exists(DELETE_TRACKER_FILE) ? json_decode(file_get_contents(DELETE_TRACKER_FILE), true) : [];
    foreach ($tracker as &$item) {
        if ($item['chat_id'] == $chat_id && $item['message_id'] == $message_id) {
            $item['progress_message_id'] = $sent_message['result']['message_id'];
            $item['progress_started'] = time();
            $item['total_seconds'] = $total_seconds;
            break;
        }
    }
    file_put_contents(DELETE_TRACKER_FILE, json_encode($tracker, JSON_PRETTY_PRINT));
}

function update_progress_bars() {
    global $delete_queue;
    
    if (empty($delete_queue)) {
        // Load from file
        if (file_exists(DELETE_TRACKER_FILE)) {
            $delete_queue = json_decode(file_get_contents(DELETE_TRACKER_FILE), true);
        }
    }
    
    $current_time = time();
    $updated_queue = [];
    
    foreach ($delete_queue as $item) {
        if ($current_time >= $item['delete_time']) {
            // Delete the message
            try {
                deleteMessage($item['chat_id'], $item['message_id']);
                bot_log("Auto-deleted message {$item['message_id']} from chat {$item['chat_id']}");
            } catch (Exception $e) {
                // Message already deleted or error
            }
            
            // Also delete progress message if exists
            if (isset($item['progress_message_id'])) {
                try {
                    deleteMessage($item['chat_id'], $item['progress_message_id']);
                } catch (Exception $e) {
                    // Ignore errors
                }
            }
            
            continue;  // Don't add back to queue
        }
        
        // Update progress bar if needed
        if (isset($item['progress_started']) && isset($item['progress_message_id'])) {
            $elapsed = $current_time - $item['progress_started'];
            $total = $item['total_seconds'];
            $remaining = max(0, $total - $elapsed);
            $percentage = ($elapsed / $total) * 100;
            
            // Update every 5 seconds or when significant change
            if ($elapsed % PROGRESS_UPDATE_INTERVAL == 0 || $percentage > 95) {
                $progress_message = "‚è≥ <b>This message will be deleted in " . $remaining . " seconds</b>\n\n";
                $progress_message .= get_progress_bar($percentage) . "\n\n";
                $progress_message .= "üìå Please forward these files to saved messages and close this message";
                
                try {
                    editMessage($item['chat_id'], $item['progress_message_id'], $progress_message, null, 'HTML');
                } catch (Exception $e) {
                    // Message might be deleted already
                }
            }
        }
        
        $updated_queue[] = $item;
    }
    
    $delete_queue = $updated_queue;
    
    // Save updated queue
    file_put_contents(DELETE_TRACKER_FILE, json_encode($updated_queue, JSON_PRETTY_PRINT));
}

